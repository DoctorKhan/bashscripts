###################### Help Text ######################
# Usage: GetSelection
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
#######################################################

if [[ $@ == Click ]]; then
	DoubleClick
	xclip -o
	press Down
	press Up
else
	xclip -o
fi
