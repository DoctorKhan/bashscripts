#!/bin/bash

#######################################################
### Created by khan on Tue Mar 19 23:23:42 CDT 2013 ###
#######################################################

###################### Help Text ######################
# Usage: isFinFile

#######################################################
if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

## Initialize

## Functions
function FileSize() { wc -c "$@" 2>/dev/null | awk '{print $1}'; }

## Main
if (($# == 0)) || [[ -d "$@" ]] || ((`FileSize "$@"` > 0)); then 
	exit 1
fi
