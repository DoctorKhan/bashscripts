#!/bin/bash

#######################################################
### Created by khan on Mon Jan 30 14:22:09 CST 2012 ###
#######################################################

###################### Help Text ######################
# Usage: sed

#######################################################
if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

## Initialize
## Functions

## Main
if ! isMac; then
	sed -i "$@";
else
	sed "$@" | wf "$(eval echo \$$#)"
fi
