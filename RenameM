#!/bin/bash

#######################################################
### Created by khan on Tue Sep 20 15:14:46 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: RenameM
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

for file in `ls *M.mat`; do mv $file `echo $file | sed 's/M.mat/.mat/g'`; done

