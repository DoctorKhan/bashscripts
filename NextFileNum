#!/bin/bash

#######################################################
### Created by khan on Tue Aug 16 23:18:53 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: NextFileNum
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

echo $((`ls $@ | sed -E 's/[^0-9]+/ /g' | sed 's/^[ 0]*//g' | word 1 | tail -n 1` + 1))
