###################### Help Text ######################
# Usage: ParseOptions  <arguments>
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

SplitOpts $@ | Decimate -v |\
sed 's/^-\([^=]*\)=\(.*\)/\1="\2"/g' #Removes hyphen and puts quotes around value
