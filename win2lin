if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

## Initialize

## Functions

## Main
for file; do
	pTemp="/tmp/456$file"
	sed 's/\r//g' "$file" > "$pTemp"
	mv "$pTemp" "$file"
done
