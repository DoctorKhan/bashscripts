#!/bin/bash

######################################################
### Created by khan on Sat Oct 8 14:08:35 CDT 2011 ###
######################################################

##################### Help Text #####################
# Usage: static-ip-info
######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
######################################################

sAddy=$@

nslookup $sAddy | grep Address | tail -n 2
echo Mask: 255.255.255.0
echo DNS Servers: 128.83.185.40, 128.83.185.41
