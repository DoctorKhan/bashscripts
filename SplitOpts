#!/bin/bash

#######################################################
### Created by khan on Sun Oct 16 19:41:03 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: SplitOpts <options>
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

nInit=$#
while (( $# > 0 )); do
	if [[ $1 == -* ]] && (( $# < nInit )); then
		echo
	fi
	echo -n "$1 "
	shift
done
echo
