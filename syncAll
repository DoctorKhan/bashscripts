#!/bin/bash

#######################################################
### Created by khan on Sat Jul 16 09:53:23 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: syncAll <host> <dir>
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
#######################################################

cd "${1:-`pwd`}"

for host in `otherhosts` ; do
	syncDown "$host"
	syncUp "$host"
done
