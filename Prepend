#!/bin/bash

#######################################################
### Created by khan on Fri Sep 30 15:05:25 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: Prepend
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

pFile="$1"; shift
sLine="$@"

mv "$pFile" t
echo "$sLine" > "$pFile"
cat t >> "$pFile"
rm t