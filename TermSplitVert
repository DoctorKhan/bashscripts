#!/bin/bash

#######################################################
### Created by khan on Sat Jul 16 16:11:43 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: TermSplitVert
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
#######################################################
. $HOME/.bashrc

xdotool key shift+ctrl+e &
ResizeWindow "${1}x ."
