#!/bin/bash

######################################################
### Created by khan on Sun Aug 7 16:27:29 CDT 2011 ###
######################################################

##################### Help Text #####################
# Usage: Number
######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
######################################################

cat -n /dev/stdin | sed -e "s,\([0-9][0-9]*\),$2\1$1," |\
columnate 2

