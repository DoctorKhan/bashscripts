##################### Help Text #####################
# Usage: vnclist
######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
######################################################

ps aux | grep Xvnc | sed 's/^\([^ ]*\) .*Xvnc :\([^ ]*\) .*/\1 \2/g' | grep -v grep | grep '[0-9]'

