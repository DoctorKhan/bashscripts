#!/bin/bash

#######################################################
### Created by khan on Sat Sep 17 22:30:42 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: SortyByLineSize
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

cat /dev/stdin | awk '{print length, $0}' | sort -n | awk '{$1=""; print $0 }'
