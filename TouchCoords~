if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

## Initialize

## Functions

## Main
 w=`Displays 1 w`; 
 h=`Displays 1 h`; 
 s=`xinput list 9 | egrep 'Range|value' | head -n 4 | awk '{print $NF}' | tr '\n' ' '`
echo "$w $h $s" | awk '{print $1*$4/$3,$2*$6/$5}'
