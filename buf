#!/bin/bash

#######################################################
### Created by khan on Sat Sep 15 23:19:00 UTC 2018 ###
#######################################################

###################### Help Text ######################
# Usage: input | buf 
#######################################################
if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

file=temporary-file-buf.tmp
tee $file
less -r +G $file
rm $file
