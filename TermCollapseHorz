#!/bin/bash

#######################################################
### Created by khan on Sat Jul 16 15:37:00 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: TermCollapseHorze
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
#######################################################
. $HOME/.bashrc

xdotool key shift+ctrl+w
ResizeWindow $(WinSize | awk '{print $1,$2/'$1'}')
