#!/bin/bash

######################################################
### Created by khan on Thu Aug 4 22:32:31 CDT 2011 ###
######################################################

##################### Help Text #####################
# Usage: dquote
######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
######################################################

if (($#==0)) && pipe; then
	while read line; do 
		dquote $line
	done
else
	if (($#>0)); then
		echo "$@" | awk '{print "\""$0"\""}'
	else
		echo '""'
	fi
fi
