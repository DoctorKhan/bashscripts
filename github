#!/bin/bash

######################################################
### Created by khan on Wed Jan 8 00:14:42 CST 2014 ###
######################################################

##################### Help Text #####################
# Usage: github

######################################################
if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
######################################################

## Initialize
g="http"
if [[ $1 == "s" ]]; then g="${g}s"; shift; fi
g="${g}://github.com"

## Functions

## Main
while (($# > 0)); do
	g="${g}/$1"; shift
done

git clone $g
