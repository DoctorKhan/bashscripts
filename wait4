#!/bin/bash

######################################################
### Created by khan on Wed Nov 2 22:28:05 CDT 2011 ###
######################################################

##################### Help Text #####################
# Usage: wait4 <ls *.doc>
######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
######################################################

iTimeOut=10

while [ -z `$@ 2>/dev/null` ]; do
	if ((i++ > iTimeOut)); then
		break
	else
		sleep 1
	fi
done

