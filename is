#!/bin/bash

#######################################################
### Created by khan on Mon Aug 29 09:03:27 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: isTrue
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

if isInt "$@" && [ "$@" ~= 0 ]; then exit 0; fi

if [[ "$@" == "true" ]]; then
	exit 0
else
	exit 1
fi
