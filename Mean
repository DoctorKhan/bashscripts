#!/bin/bash

######################################################
### Created by khan on Sun Feb 5 10:37:57 CST 2012 ###
######################################################

##################### Help Text #####################
# Usage: Mean

######################################################
if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
######################################################

## Initialize
read x1
n=1

## Functions

## Main
while read x2; do
	((++n))
	x1=`echo $x2 $x1 | awk '{print $1 + $2}'`
done

echo $x1 $n 
#| awk '{print $1 / $2 }'
