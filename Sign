#!/bin/bash

#######################################################
### Created by khan on Sun Sep 25 14:44:40 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: Sign
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

v=$@
if ((v > 0)); then
	echo +
elif ((v == 0)); then
	echo 0
else
	echo -
fi