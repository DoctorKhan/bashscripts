#!/bin/bash

#######################################################
### Created by khan on Sat Nov 19 10:50:04 CST 2011 ###
#######################################################

###################### Help Text ######################
# Usage: disk-schedules
#######################################################
if [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#######################################################

## Initialize
block=/sys/block

## Main
paste <(ls $block) <(sed 's/\(.*\)\[\(.*\)\] \(.*\)/\2 \1\3/g' $block/*/queue/scheduler)
