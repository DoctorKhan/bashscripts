#!/bin/bash

#######################################################
### Created by khan on Wed Sep 28 21:21:28 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: pipe | Line <n>
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

pFile=`TempFile -p Line`

for iLine in "$@"; do
	sed -n "${iLine}p" "$pFile"
done

