###################### Help Text ######################
# Usage: OpenFile
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

if regmatch "$@" '(www|http)'; then
	google-chrome "$@"
else
	Edit "$@"
fi
