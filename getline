#!/bin/bash

#######################################################
### Created by khan on Mon Oct 10 06:08:20 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: getline <line> <file>
#######################################################
if (( $# < 1 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

n=$1; shift

if [ $# == 0 ]; then
	pFile=/dev/stdin
else
	pFile="$@"
fi

cat "$pFile" | head -n $n | tail -n 1
