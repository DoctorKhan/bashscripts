###################### Help Text ######################
# Usage: WhichDesktop
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

xm=`xMax`
#ym=`echo $s | word 2 x`

if (($xm == 0)); then
	echo 1
else
	xdotool get_desktop_viewport | awk '{print ( $1 / '$xm' ) + 1}'
fi
