#!/bin/bash

#######################################################
### Created by khan on Sat Sep 10 15:22:13 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: VNCSessions
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"; echo; exit 0
fi
#######################################################

find "$HOME/.vnc" -iname 'tiger.conf' |\
sed -e 's,/tiger.conf,,g' -e 's,*\.vnc,,g' -e 's,*/,,g' |\
sed "s,$HOME/.vnc/*,,g" | StrTrim
