##################### Help Text #####################
# Usage: GetWPTitle

######################################################
if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
######################################################

## Initialize

## Functions

## Main
cat /dev/stdin | grep -o '<title>[^<]*</title>' | sed 's,<title>\([^<]*\)</title>,\1,g' | tr -d '\n'
