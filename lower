#!/bin/bash

#######################################################
### Created by khan on Thu Jul 28 23:29:03 CDT 2011 ###
#######################################################

###################### Help Text ######################
# Usage: lower
#######################################################
if (( $# < 0 )) || [[ "$1" == *-h* ]]; then echo
	grep -A 99999 "# Help.*#*" $0 |\
	grep -E -m 2 -B 99999 "#{10,}"
echo; exit 0; fi
#######################################################

echo $@ | tr '[[:upper:]]' '[[:lower:]]'
